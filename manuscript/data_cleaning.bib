	keywords = {phenology, phenological distribution, phenological mismatch, reaction norm, response to climate change},
	pages = {e01352},
	file = {Full Text PDF:C\:\\Users\\bw42kg\\Zotero\\storage\\XKHJJ5Y3\\Inouye et al. - 2019 - Phenology as a process rather than an event from .pdf:application/pdf;Snapshot:C\:\\Users\\bw42kg\\Zotero\\storage\\P82GD6KJ\\ecm.html:text/html},
