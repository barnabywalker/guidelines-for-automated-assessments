	author = {Rudolf, Volker H. W.},
	year = {2019},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.13277},
	keywords = {phenology, Climate change, coexistence, community dynamics, competition, mismatch, priority effect, seasonal variation},
	pages = {1324--1338},
	file = {Full Text PDF:C\:\\Users\\bw42kg\\Zotero\\storage\\TSLX2H8K\\Rudolf - 2019 - The role of seasonal timing and phenological shift.pdf:application/pdf;Snapshot:C\:\\Users\\bw42kg\\Zotero\\storage\\WPE3BK7Y\\ele.html:text/html},
